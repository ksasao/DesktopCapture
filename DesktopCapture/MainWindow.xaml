<Window x:Class="DesktopCapture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopCapture"
        mc:Ignorable="d"
        Title="デスクトップキャプチャ" Height="759" Width="451" MinHeight="500" MinWidth="500"
        Icon="app.ico">
    <Grid Margin="10">          
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2.5*" MinHeight="200"/>
            <RowDefinition Height="*" MinHeight="100"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 領域選択 -->
        <GroupBox Header="キャプチャ領域" Grid.Row="0" Margin="0,0,0,10">
            <StackPanel>
                <Button Name="SelectRegionButton" Content="領域を選択" 
                        Click="SelectRegionButton_Click" Padding="10,5" Margin="0,5"/>
                <TextBlock Name="RegionText" Text="未設定" 
                          Margin="0,5" FontSize="12"/>
            </StackPanel>
        </GroupBox>

        <!-- 保存設定 -->
        <GroupBox Header="保存設定" Grid.Row="1" Margin="0,0,0,10">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="保存先:" VerticalAlignment="Center" Width="60"/>
                    <TextBox Name="SavePathTextBox" Width="316" Margin="5,0"/>
                    <Button Name="BrowseButton" Content="参照" 
                            Click="BrowseButton_Click" Padding="10,5" Margin="5,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="形式:" VerticalAlignment="Center" Width="60"/>
                    <ComboBox Name="FormatComboBox" Width="100" SelectedIndex="0"
                              SelectionChanged="FormatComboBox_SelectionChanged">
                        <ComboBoxItem Content="PNG"/>
                        <ComboBoxItem Content="JPEG"/>
                    </ComboBox>
                </StackPanel>
                <CheckBox Name="CopyToClipboardCheckBox" 
                          Content="キャプチャ時にクリップボードにもコピー" 
                          Margin="0,5" 
                          IsChecked="True"
                          Checked="CopyToClipboardCheckBox_Changed"
                          Unchecked="CopyToClipboardCheckBox_Changed"/>
            </StackPanel>
        </GroupBox>

        <!-- キャプチャボタン -->
        <Button Name="CaptureButton" Content="キャプチャ (Ctrl+Shift+C)" 
                Grid.Row="2" Click="CaptureButton_Click" 
                IsEnabled="False" Padding="10,8" FontSize="14" FontWeight="Bold"
                Margin="0,0,0,10"/>

        <!-- サムネイル表示 -->
        <GroupBox Header="最新のキャプチャ" Grid.Row="3" Margin="0,0,0,10">
            <Border BorderBrush="Gray" BorderThickness="1" Background="White">
                <Viewbox Stretch="Uniform">
                    <Image Name="ThumbnailImage" />
                </Viewbox>
            </Border>
        </GroupBox>

        <!-- サムネイル履歴 -->
        <GroupBox Header="キャプチャ履歴" Grid.Row="4" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <WrapPanel Name="ThumbnailHistoryPanel" Orientation="Horizontal"/>
            </ScrollViewer>
        </GroupBox>

        <!-- ステータス -->
        <TextBlock Name="StatusText" Grid.Row="5" 
                  Text="領域を選択してください。" 
                  FontSize="12" Foreground="Blue"/>
    </Grid>
</Window>
